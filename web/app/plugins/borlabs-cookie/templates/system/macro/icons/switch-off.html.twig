{% macro component(config, localized) %}
    {% set config = {
        color: 'bc-text-black',
        cssClasses: [],
        width: 'bc-w-8',
        height: 'bc-h-5',
    } | merge(config) %}
    {% set cssClasses = [
        config.width,
        config.height,
        config.color
    ] | merge(config.cssClasses) %}
    <svg viewBox="0 0 32 20" fill="currentColor" class="{{ cssClasses | join(' ') }} bc-inline-block" xmlns="http://www.w3.org/2000/svg">
        <rect x="2" y="3" width="28" height="14" rx="7" stroke="currentColor" fill="transparent" stroke-width="1.5" stroke-linejoin="round"/>
        <circle cx="9.5" cy="10" r="4.5" fill="currentColor"/>
    </svg>
{% endmacro %}


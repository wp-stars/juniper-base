{% extends "base.twig" %}

{% block content %}

    {% do action('woocommerce_before_single_product') %}

    {% block breadcrumbs %}
    	{% include "blocks/breadcrumbs.twig" with {
            'home_page_url': home_page_url, 
            'parent_page_title': parent_page_title, 
            'parent_page_url': parent_page_url, 
            'page_title': page_title, 
            'page_url': page_url
        } %}
	{% endblock %}    

    <article itemscope itemtype="http://schema.org/Product" class="mt-[1.875rem] container single-product-details {{ post.class }}">
        <div class="flex flex-col md:flex-row gap-y-10 md:gap-x-10 mb-[8rem] sm:mb-[6.25rem] px-auto">
            <div class="entry-images shadow-md max-w-[400px]" style="height: min-content;">
                {% do action('woocommerce_before_single_product_summary') %}
            </div>

            <div class="summary entry-summary flex-grow">
                {% do action('wps_print_product_categories') %}
                {% do action('wps_print_metals_and_accessories') %}
                {% do action('woocommerce_single_product_summary') %}
            </div>
            
            <meta itemprop="url" content="{{ post.link }}" />
        </div>
        <div class="grid grid-cols-1 gap-x-10">
            {% do action('woocommerce_after_single_product_summary') %}
        </div>
    </article>

    {% do action('woocommerce_after_single_product') %}

{% endblock  %}
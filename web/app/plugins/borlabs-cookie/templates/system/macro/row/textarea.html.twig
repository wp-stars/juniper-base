{% macro component(config) %}
    {% embed "system/embed/form-row.html.twig" %}
        {% block label %}
            <label for="{{ config.id }}">{{ config.label | raw }}</label>
        {% endblock %}

        {% block input %}
            {% import "system/macro/form-component/textarea.html.twig" as textarea %}
            {{ textarea.component(config, localized) }}
        {% endblock %}
    {% endembed %}
{% endmacro %}

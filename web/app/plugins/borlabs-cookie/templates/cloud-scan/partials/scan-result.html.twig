<div class="bc-w-2/3">
    {% embed "system/embed/card/card-with-title.html.twig" with {contentSpacing: false} %}
        {% import "system/macro/card/card-heading.html.twig" as card_heading %}

        {% block header %}
            {{ card_heading.component({
                title: localized.headline.scanResults,
            }) }}
        {% endblock %}

        {% block content %}
            {% import "system/macro/row/text.html.twig" as row_text %}

            {{ row_text.component({
                label: localized.field.cloudScanId,
                value: data.scan.externalId,
            }) }}

            {{ row_text.component({
                label: localized.field.createdAt,
                value: data.scan.createdAt.format('Y-m-d H:i')
                ,
            }) }}

            {{ row_text.component({
                label: localized.field.type,
                value: data.scan.type.description,
            }) }}
        {% endblock %}
    {% endembed %}
</div>
